<script src="//maps.google.com/maps/api/js?v=3.13&amp;sensor=false&amp;libraries=geometry" type="text/javascript"></script>
<script src='//google-maps-utility-library-v3.googlecode.com/svn/tags/markerclustererplus/2.0.14/src/markerclusterer_packed.js' type='text/javascript'></script>

<div class="center hero-unit">
  <h1>Welcome to the 個サルapp</h1>

  <h2>
		東京を中心に個人参加できるフットサルコート場の情報を収集したサイトです。
  </h2>
</div>



<div style='width: 940px;'>
  <div id="map" style='width: 940px; height: 400px;'></div>
</div>

<script type="text/javascript">
    handler = Gmaps.build('Google');
    handler.buildMap({ provider: {}, internal: {id: 'map'}}, function(){
      markers = handler.addMarkers(<%=raw @hash.to_json %>);
      handler.bounds.extendWith(markers);
      handler.fitMapToBounds();
    });
</script>



<br>

<div class="center hero-unit">
<table class="table table-striped">
<%= link_to "最新情報", '#', class: "btn btn-large btn-primary" %>
<thead>
	<th width="20%">場所</th>
	<th width="20%">イベント名</th>
  <th width="20%">日時</th>
  <th width="20%">募集人数</th>
  <th width="20%">残り</th>
</thead>
<tbody>
	<% @detail.zip(@date,@url,@title).each do |item,date,url,title| %>
		<tr><td>落合南長崎</td><td><a href='<%= url %>'><%= title %></a></td><td><%= date %></td><td><%= item[0] %></td><td><%= item[1] %></td></tr>
	<% end %>
  <% @detail_toshi.zip(@date_toshi,@url_toshi,@title_toshi).each do |item,date,url,title| %>
		<tr><td>豊島園</td><td><a href='<%= url %>'><%= title %></a></td><td><%= date %></td><td><%= item[0] %></td><td><%= item[1] %></td></tr>
	<% end %>
  <% @detail_toshi.zip(@date_nerima,@url_nerima,@title_nerima).each do |item,date,url,title| %>
		<tr><td>練馬</td><td><a href='<%= url %>'><%= title %></a></td><td><%= date %></td><td><%= item[0] %></td><td><%= item[1] %></td></tr>
	<% end %>

</tbody>
</table>
</div>
